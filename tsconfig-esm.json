{
  "$schema": "https://json.schemastore.org/tsconfig",
  "files": ["./src/index.ts"],
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2019",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}