{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2019",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
